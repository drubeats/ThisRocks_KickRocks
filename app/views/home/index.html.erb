<p id="notice"><%= notice %></p>

<h1>Bands</h1>

<table>
 <thead>
   <tr>
     <th>Band Name</th>
     <th>Description</th>
     <!-- <th>Pictureleft</th>
     <th>Pictureright</th> -->
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @bands.each do |band| %>
     <tr>
       <td><%= band.name %></td>
       <td><%= band.description %></td>
       <td><%#= band.pictureLeft %></td>
       <td><%#= band.pictureRight %></td>
       <td><%= link_to like_path(id: band.id) do %>
           Upvote
           <%= band.get_upvotes.size %>
           <% end %>
       </td>
       <td><%= link_to dislike_path(id: band.id) do %>
         Downvote
         <%= band.get_downvotes.size %>
         <% end %>
       </td>
       <td><%= link_to 'Show', band %></td>
       <td><%= link_to 'Edit', edit_band_path(band) %></td>
       <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
   <% end %>
 </tbody>
</table>

<br>

